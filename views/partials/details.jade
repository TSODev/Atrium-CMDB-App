.panel.panel-default
  .panel-heading
    h5 {{ heading }}
  .panel-body
    h3 {{title}}
  table.table.table-striped.table-bordered.table-condensed(table-layout="fixed" word-wrap="break-word")
    thead
      tr
        th Attributes
        th Value
    tbody
      tr(ng-repeat="a in attributes",ng-class-odd="'odd'" ,ng-class-even="'even'", ng-if="attributes")
        td {{ a.key }}
        td {{ a.value }}
  .panel-footer
    h5 Footer - {{ footer }}